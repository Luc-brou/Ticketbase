@model IEnumerable<Ticketbase.Models.Genre>

@{
    ViewData["Title"] = "All Genres";
}

<h1>Genres</h1>

<p>
    <a asp-action="Create">Create New Genre</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GenreID">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.GenreID">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.GenreID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>