@model IEnumerable<Ticketbase.Models.Concert>

@{
    ViewData["Title"] = "All Concerts";

}

<h1>Concerts</h1>

<p>
    <a asp-controller="Concerts" asp-action="Create">Create New Concert</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>Image</th>
            <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
            <th>@Html.DisplayNameFor(model => model.ConcertDate)</th>
            <th>@Html.DisplayNameFor(model => model.Genre)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">@item.Title</td>
                <td class="align-middle">@item.Description</td>
                <td>
                    <div class="d-flex align-items-center">
                            <img src="~/photos/@item.Filename"
                                 alt="No photo."
                                 class="img-thumbnail me-2"
                                 style="max-height:100px;" />
                    </div>
                </td>
                <td class="align-middle">@item.CreateDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="align-middle">@item.ConcertDate.ToString("yyyy-MM-dd")</td>
                <td class="align-middle">@item.Genre?.Title</td>
                <td class="align-middle">
                    <a asp-controller="Concerts" asp-action="Edit" asp-route-id="@item.ConcertID">Edit</a> |
                    <a asp-controller="Concerts" asp-action="Details" asp-route-id="@item.ConcertID">Details</a> |
                    <a asp-controller="Concerts" asp-action="Delete" asp-route-id="@item.ConcertID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>